{
  "extends": "@mullet/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@mullet/ui/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
